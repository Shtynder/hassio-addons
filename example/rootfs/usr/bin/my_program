#!/usr/bin/with-contenv bashio

echo "All done!" > /share/example_addon_output.txt

for var in $(bashio::config 'connection|keys'); do
    name=$(bashio::config "connection[${var}].name")
    value=$(bashio::config "connection[${var}].id")
    bashio::log.info "Setting ${name} to ${value}"

    echo "${name} = ${value}" >> /share/config_output.txt
done
